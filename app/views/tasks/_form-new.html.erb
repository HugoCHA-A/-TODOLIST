<div class="container border-top h-100">
  <%= simple_form_for @task do |f| %>
    <div class="row">
      <div class="col p-4">
        <%= f.input :name, label: "Nom de la tâche:"  %>
        <%= f.input :description, label: "Descritpion:", input_html: {style: 'height:100px;'} %>
        <%= f.input :category, collection: Task::CATEGORY, label: "Catégorie:" %>
      </div>
      <div class="col pt-4 pb-4">
        <div class="mb-5">
          <%= f.input :status, class: "mb-5", collection: Task::STATUS, label: "Statut:", default: "En attente" %>
        </div>
        <div class="mb-4 pb-1">
          <%= f.input :priority, class: "mb-5", collection: Task::PRIORITY, label: "Priorité:", default: "Moyenne" %>
        </div>
        <div class="mt-3">
          <%= f.input :deadline, class: "mb-5",
                    as: :string,
                    input_html: { data: { controller: "datepicker" } }, label: "Date butoire:"  %>
        </div>
      </div>
      <div class="col p-4">
        <div class="pb-4">
          <%= f.input :user, collection: Task::USERS, label: "Créée par:" %>
        </div>
        <div class="mt-5 pt-3">
          <%= f.input :assigned_users, collection: Task::ASSIGNED_USERS, input_html: { multiple: true }, label: "Assigner à (plusieurs choix possibles):" %>
        </div>
      </div>
      <div class="col-12 w-100">
        <%= f.submit 'Créer une nouvelle tâche', class: "btn btn-primary w-100 mb-4 pt-3 pb-3 fs-4" %>
      </div>
    </div>
  <% end %>
</div>
