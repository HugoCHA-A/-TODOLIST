<div class="container">
  <h1 class="card-title text-center mt-3 mb-3 border-bottom border-primary mb-4 pb-4">TO-DO LIST</h1>
  <div class="card-container d-flex ps-5 pt-4">
    <div class="row ">
      <div class="col-3 text-center border border-primary bg-primary ms-5 mb-5 pt-4 rounded-4">
        <%= link_to new_task_path, class: "text-decoration-none text-dark btn btn-primary pb-5 pt-5 fs-4 h-100 w-100" do %>
          <p>Cliquer pour créer une nouvelle tâche</p>
        <% end %>
      </div>
      <% @tasks.each do |task| %>
      <% unless task.status == "Terminée" %>
        <div class="card col-3 border border-primary ms-5 mb-5 rounded-4">
          <%= link_to task_path(task), class: "text-decoration-none text-dark ps-2" do %>
            <ul class="list-unstyled">
              <li class="fs-2 text-center pt-1 pb-1"><%= task.name %></li>
              <li class="fs-5 text-center pb-1"><%= task.description %></li>
              <li class=""><p>Catégorie: <%= task.category %></p></li>
              <li class=""><p>Statut: <%= task.status %></p></li>
              <li class=""><p>Priorité: <%= task.priority %></p></li>
              <li class=""><p>Date butoire: <%= task.deadline %></p></li>
            </ul>
          <% end %>
        </div>
        <% end %>
      <% end %>
  </div>
  </div>
</div>
